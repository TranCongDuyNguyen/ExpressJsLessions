extends ../common
block content 
	h1 Create User
	if errors
		each error in errors
			.alert.alert-primary(role='alert')= error

	form(action="/auth/login", method="POST")
		.form-group
			label(for="email") Email
			input#email(name="email", type="text", class="form-control ml-2", value= values?values.email:"")
		.form-group
			label(for="pw") Password
			input#pw(name="pw", type="password", class="form-control ml-2", value= values?values.pw:"")
		button(class="btn-sm btn-primary ml-2") Create
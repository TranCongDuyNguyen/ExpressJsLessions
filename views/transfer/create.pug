extends ../common
block content 
	h1 Create User
	if errors
		each error in errors
			.alert.alert-danger(role='alert')= error

	form(action="/transfer/create", method="POST")
		input(type="hidden", name="_csrf", value= csrfToken)
		.form-group
			label(for="account") Account
			input#account(name="account", type="text", class="form-control ml-2", value= values?values.account:"")
		.form-group
			label(for="amount") Amount
			input#amount(name="amount", type="number", class="form-control ml-2", value= values?values.amount:"")
		button(class="btn-sm btn-primary ml-2") Create